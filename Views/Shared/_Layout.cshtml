<!-- MainLayout.cshtml -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/css/Layout.css" rel="stylesheet" />
</head>
<body>
    <div class="page">
        <div class="sidebar">
            <!-- Tutaj wstaw nawigację -->
            <ul class="nav flex-column">
                <li class="nav-item px-3">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item px-3">
                    <a class="nav-link" href="/YourAssets">Your Assets</a>
                </li>
                <li class="nav-item px-3">
                    <a class="nav-link" href="/YourTransactions">Your Transactions</a>
                </li>
                <li class="nav-item px-3">
                    <a class="nav-link" href="/Account">Your Account</a>
                </li>
            </ul>
        </div>

        <main>
            <article class="content px-4">
                @RenderBody()
            </article>
        </main>
    </div>

    <div id="blazor-error-ui">
        <!-- Opcjonalnie: Możesz pominąć lub zastąpić odpowiednim komunikatem błędu -->
    </div>
</body>
</html>
